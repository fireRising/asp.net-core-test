@model ClassifProject.Models.Classifiers
@{
    ViewData["Title"] = "Delete Classifier";
}

<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Model.id_class</th>
                <td>@Model.name_class</td>
            </tr>
        </tbody>
    </table>

    <div>
        <form asp-controller="Home" asp-action="DeleteClassifier" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
